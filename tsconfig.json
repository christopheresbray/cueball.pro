{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "react-jsx",
      "baseUrl": "./src",
      "paths": {
        "@components/*": ["components/*"],
        "@context/*": ["context/*"],
        "@firebase/*": ["firebase/*"],
        "@pages/*": ["pages/*"],
        "@services/*": ["services/*"],
        "@utils/*": ["utils/*"]
      },
      "allowSyntheticDefaultImports": true
    },
    "include": ["src", "seed-database.js"],
    "exclude": ["node_modules", "dist"]
  }
  